<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/scrollBar"
    android:backgroundTint="@color/teal_200"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/viewlistr">
        </ImageButton>

        <ImageButton
            android:id="@+id/routes_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@id/map"
            android:background="@drawable/book_open">

        </ImageButton>

        <ImageButton
            android:id="@+id/favourite_routes_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/routes_list"
            android:layout_marginLeft="40dp"
            android:background="@drawable/heart">
        </ImageButton>

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/favourite_routes_list"
            android:layout_marginLeft="40dp"
            android:background="@drawable/settings">
        </ImageButton>

    </RelativeLayout>



</androidx.cardview.widget.CardView>